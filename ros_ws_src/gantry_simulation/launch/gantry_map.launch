<launch>
    <!-- Send a static GPS fix to every new subscriber. Edit latitude and longitude in launch/ganry_map.gps to use your own position. -->
    <node pkg="rostopic" type="rostopic" name="gantry_gps_fix" args="pub /gps/fix sensor_msgs/NavSatFix --latch --file=$(find gantry_simulation)/launch/gantry_map.gps" />

    <!-- Start rviz with a pre-configured AerialMap instance. It will use the gantry GPS fix from above. -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find gantry_simulation)/launch/gantry_map.rviz"/>
</launch>
