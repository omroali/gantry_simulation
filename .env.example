# Mapbox Satellite Maps Configuration
# Copy this file to .env and fill in your actual tokens
# NEVER commit .env to version control!

# Mapbox Access Token
# Get your token from: https://account.mapbox.com/tokens/
# Required for satellite imagery display
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Optional: Alternative Tile Service Tokens
# Uncomment and fill if using other services

# Google Maps API Key
# Get from: https://console.cloud.google.com
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mapbox Username (optional, for custom styles)
# MAPBOX_USERNAME=your_mapbox_username

# Tile Cache Configuration
# Location to store downloaded tiles (default: ~/.cache/rviz_satellite)
# TILE_CACHE_DIR=${HOME}/.cache/rviz_satellite

# Zoom Level (16-22, higher = more detail)
TILE_ZOOM_LEVEL=18

# Number of parallel download workers
TILE_DOWNLOAD_WORKERS=4

# GPS Configuration
# Topic to subscribe for GPS updates
GPS_TOPIC=/gps/fix

# RViz Configuration
# Map frame for RViz display
MAP_FRAME=map

# Fixed frame for RViz
FIXED_FRAME=base_link

# UTM Configuration
# UTM zone (-1 for auto-detection)
UTM_ZONE=-1
